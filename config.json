{
	"data": {
		"filename": "2hdata.csv",
		"columns": [
			"close",
			"volume",
			"ewm8","ewm13","ewm21","ewm55"
			
		],
		"sequence_length": 40,
		"train_test_split": 0.85,
		"normalise": true
	},
	"training": {
		"epochs": 50,
		"batch_size": 40
	},
	"model": {
		"loss": "mse",
		"optimizer": "adam",
		"save_dir": "saved_models",
		"layers": [
			{
				"type": "lstm",
				"neurons": 750,
				"input_timesteps": 39,
				"input_dim": 6,
				"return_seq": true
			},
			{
				"type": "dropout",
				"rate": 0.2
			},
			{
				"type": "lstm",
				"neurons": 750,
				"return_seq": true
			},
			{
				"type": "lstm",
				"neurons": 750,
				"return_seq": false
			},
			{
				"type": "dropout",
				"rate": 0.2
			},
			{
				"type": "dense",
				"neurons": 1,
				"activation": "linear"
			}
		]
	}
}
